<div class="event">
  <div class="toolbar"></div>

  <!-- upvotes -->
  <div class="span1 votes">
	<div class="uparrow"></div>
	<div class="count">0</div>
	<div class="voteup "><span class="upvote-caret"></span>Vote up</div>	
	<div class="clearfix"></div>
  </div>

  <!-- content -->
  <div class="span7 content">

	<!-- title & body -->
	<div class="row">
	  <h5><a href="#"><%= event.attr('title') %></a></h5>
	  <div class="body"><%= event.attr('body') %></div>
	  <div class="clearfix"></div>	  
	</div>
	
	<!-- status -->
	<div class="status row">
	  <div class="metadata-container pull-right">
		<div class="event-metadata pull-right">
		  <small><a href="#">User</a> / Today at 2:56 AM via <strong><a href="#">feed</a></strong></small>
		</div>
	  </div>	  
	  <ul class="tag-list nav">	
		<li class="tag-name canjs"><a href="/canjs/"><small>canjs</small></a></li>	
		<li class="category-name"><a href="/bug/"><small>bug</small></a></li>
	  </ul>
	  <div class="clearfix"></div>
	</div>
	
  </div>

  <div class="clearfix"></div>
</div>


