<h1 class="admin-page-header">Services</h1>
<hr>
<form role="form">
	<div class="clearfix services-wrapper">
		<div class="col-xs-3">
			<ul class="nav nav-pills nav-stacked nav-services">
				{{#each services}}
					<li {{#ifTab this}}class="active"{{/ifTab}} can-click="switchTab" data-tab="{{ this }}">
						<a href="javascript://">
							<i class="fa fa-check {{activeService this}}"></i> {{ . }}
						</a>
					</li>
				{{/each}}
			</ul>
		</div>

		{{#ifTab 'twitter'}}
			<div class="col-xs-9">
				<button class="btn btn-default" can-click="connectTwitter">Connect Twitter</button>
			</div>
		{{/ifTab}}

		{{#ifTab 'github'}}
			<div class="col-xs-9">
				<button class="btn btn-default" can-click="connectGithub">Connect GitHub</button>
			</div>
		{{/ifTab}}
		
		{{#ifTab 'disqus'}}
			<div class="col-xs-9">
				<button class="btn btn-default" can-click="connectDisqus">Connect Disqus</button>
			</div>
		{{/ifTab}}


		{{#ifTab 'meetup'}}
			<div class="col-xs-9">
				<button class="btn btn-default" can-click="connectMeetup">Connect Meetup</button>
			</div>
		{{/ifTab}}

		{{#ifTab 'rss'}}
			<div class="col-xs-9">
				<h3>Setup RSS</h3>
				<div class="form-group">
					<label>RSS Feed URL</label>
					<input type="text" class="form-control" value="http://www.bitovi.com/blog.rss">
				</div>
				<button class="btn-primary btn btn-xs">Add RSS Feed</button>
				<hr>

				<h4>Blacklisted domains:</h4>
				<div class="form-group">
					<input type="text" class="form-control" value="canjs.com">
				</div>
				<div class="form-group">
					<input type="text" class="form-control" value="github.com">
				</div>
				<button class="btn-primary btn btn-xs">Add Domain</button>
				<hr>

				<button class="btn btn-info test-integration">Test this integration</button>
			</div>
		{{/ifTab}}

		{{#ifTab 'irc'}}
			<div class="col-xs-9">
				<h3>Setup IRC</h3>
				<div class="form-group">
					<label>Server Address</label>
					<input type="text" class="form-control" value="Server Address">
				</div>
				<div class="form-group">
					<label>Username (optional)</label>
					<input type="text" class="form-control" value="Username">
				</div>
				<div class="form-group">
					<label>Password (optional)</label>
					<input type="text" class="form-control" value="Password">
				</div>
				<div class="form-group">
					<label>Port</label>
					<input type="text" class="form-control" value="6667">
				</div>
				<div class="form-group">
					<label>Channel</label>
					<input type="text" class="form-control" value="Channel">
				</div>
				<hr>

				<button class="btn btn-info test-integration">Test this integration</button>
			</div>
		{{/ifTab}}


	</div>
	
</form>