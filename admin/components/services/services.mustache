<h1 class="admin-page-header">Services</h1>
<hr>
<form role="form">
	<div class="clearfix services-wrapper">
		<div class="col-xs-3">
			<ul class="nav nav-pills nav-stacked nav-services">
				{{#each services}}
					<li {{#ifTab this}}class="active"{{/ifTab}} can-click="switchTab" data-tab="{{ this }}">
						<a href="javascript://">
							<i class="fa fa-check {{#isActiveProvider this}}active-service{{/isActiveProvider}}"></i> {{ . }}
						</a>
					</li>
				{{/each}}
			</ul>
		</div>

		{{#ifTab 'twitter'}}
			<div class="col-xs-9">
				{{#isActiveProvider provider}}
					<p>Your Twitter account is connected!</p>
				{{else}}
					<p>Connect your Twitter account.</p>
					<button class="btn btn-default" can-click="connectService">Connect Twitter</button>
				{{/isActiveProvider}}
			</div>
		{{/ifTab}}

		{{#ifTab 'github'}}
			<div class="col-xs-9">
				{{#isActiveProvider provider}}
					<p>Your GitHub account is connected! Select repos you want to track:</p>
					<h3>Repos</h3>
					<ul class="list-unstyled">
						{{#identity.repos}}
							<li>
								<label class="checkbox">
									<input type="checkbox" can-click="toggleSelection" data-what="repos" {{#isSelected 'repos' this}}checked{{/isSelected}}>
									{{ this }}
								</label>
							</li>
						{{/identity.repos}}
					</ul>
				{{else}}
					<p>Connect your GitHub account and select repos you want to track.</p>
					<button class="btn btn-default" can-click="connectService">Connect GitHub</button>
				{{/isActiveProvider}}
			</div>
		{{/ifTab}}

		{{#ifTab 'facebook'}}
			<div class="col-xs-9">
				{{#isActiveProvider provider}}
					<p>Your Facebook account is connected!</p>
				{{else}}
					<p>Connect your Facebook account and select pages you want to track.</p>
					<button class="btn btn-default" can-click="connectService">Connect Facebook</button>
				{{/isActiveProvider}}
			</div>
		{{/ifTab}}

