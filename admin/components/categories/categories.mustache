{{#if currentFunnel}}
	<category-form category="currentFunnel" done-editing="doneEditing"></category-form>
{{else}}
	<h1 class="admin-page-header">Categories</h1>
	<hr>
	<button class="btn btn-primary" can-click="newFunnel">Create Category</button>
	<table class="table">
		<thead>
			<tr>
				<th>Category Name</th>
				<th class="actions"></th>
			</tr>
		</thead>
		<tbody>
			{{#funnels}}
				<tr>
					<td>{{ display_name }}</td>
					<td>
						<button class="btn btn-xs" can-click="editFunnel">Edit</button>
						<button class="btn btn-xs btn-danger" can-click="deleteFunnel">Delete</button>
					</td>
				</tr>
			{{/funnels}}
		</tbody>
	</table>
{{/if}}