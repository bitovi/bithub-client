{{#if currentFunnel}}
	<category-form category="currentFunnel" done-editing="doneEditing"></category-form>
{{else}}
	<h1 class="admin-page-header">
		Categories
		<a href="{{ funnelLink 'new' }}" class="btn btn-primary create-category">Create Category</a>
	</h1>
	<hr>
	<div class="alert alert-info">
		Ordering the categories will influence their position on the frontpage and in the menu.
	</div>
	<table class="table">
		<thead>
			<tr>
				<th class="reorder"></th>
				<th>Category Name</th>
				<th class="actions"></th>
			</tr>
		</thead>
		<tbody>
			{{#each funnels}}
				<tr>
					<td>
						<div class="btn-group">
							<button class="btn btn-xs btn-default" can-click="moveUp" {{#isFirst}}disabled{{/isFirst}}>
								&#9650;
							</button>
							<button class="btn btn-xs btn-default" can-click="moveDown" {{#isLast}}disabled{{/isLast}}>
								&#9660;
							</button>
						</div>
					</td>
					<td>{{ display_name }}</td>
					<td>
						<div class="btn-group">
							<a class="btn btn-xs btn-default" href="{{ funnelLink this }}">Edit</a>
							<button class="btn btn-xs btn-danger" can-click="deleteFunnel">Delete</button>
						</div>
					</td>
				</tr>
			{{/each}}
		</tbody>
	</table>
{{/if}}