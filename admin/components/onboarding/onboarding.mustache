{{#unlessState 'homepage,dashboard,dashboard_popup,scoring_rules_page,rewards_page'}}
	<ul class="nav nav-tabs steps">
		<li {{#whenState 'organization'}}class="active"{{/whenState}}>
			<a class="dropdown-toggle" data-toggle="dropdown" href="#">
				<span class="badge">1</span> Setup accounts
			</a>
