<h3>Add role:</h3><div id="add-role" class="row">	<form class="form-horizontal">		<div class="control-group">			<input type="text" class="input-medium" name="role" placeholder="Role..">			<button type="submit" class="btn">Add</button>		</div>	</form></div><h3>Remove role:</h3><div class="remove-role" class="row">	<ul class="roles">		<% can.each(user.attr('roles'), function(role, idx) { %>		<li <%= (el) -> el.data('role', role) %>> <%= role %><button class="btn remove-role">x</button></li>		<% }) %>	</ul></div>