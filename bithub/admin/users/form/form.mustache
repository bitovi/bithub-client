<div class="user-info"></div><div class="span7 offset3 user-roles">	{{#if user.roles.length}}			<div class="remove-role row">			<strong>User roles</strong><br>			<ul class="roles unstyled">				{{#user.roles}}					<li {{ data 'role' }} class="clearfix">					{{ . }} <button class="btn btn-mini btn-danger remove-role">&times;</button>				</li>				{{/user.roles}}			</ul>		</div>	{{/if}}	<div id="add-role" class="row">		<form class="form-horizontal">			<div class="control-group">				<input type="text" class="input-medium" name="role" placeholder="Add role">				<button type="submit" class="btn">Add</button>			</div>		</form>	</div></div>