<div class="container">			
  <div class="row">
	<div class="span8 newpost-form">

	  <form id="newpost-form" class="form-horizontal" method="post" enctype="multipart/form-data">
		<fieldset>
		  <div class="row">

			<div class="span left">

			  <input type="hidden" name="project">
			  <input type="hidden" name="type">

			  <div class="image-uploader">
				<span>Add An <br>Image</span>
				<div class="progress hidden"><div class="bar" style="width: 0%;"></div></div>
				<input type="file" name="image">
			  </div>

			  <div class="btn-group control-group" id="newpost-form-project">
				<button class="btn select"></button>
				<button class="btn dropdown-toggle" data-toggle="dropdown">
				  <span class="caret"></span>
				</button>
				<ul class="dropdown-menu">
				  {{#projects}}
				  <li><a>{{name}}</a></li>
				  {{/projects}}
				</ul>
			  </div>

			  <div class="btn-group control-group" id="newpost-form-type" style="margin-left: 0px;">
				<button class="btn select">App</button>
				<button class="btn dropdown-toggle" data-toggle="dropdown">
				  <span class="caret"></span>
				</button>
				<ul class="dropdown-menu">
				  <li><a>Article</a></li>
				  <li><a>App</a></li>
				  <li><a>Plugin</a></li>
				</ul>
			  </div>

			</div>

			<div class="span right">

			  <div class="control-group" id="newpost-form-title">
				<p class="text-error hidden"></p>
				<input name="title" type="text" class="title span3" data-toggle="toggle" placeholder="Title:"/>
			  </div>

			  <div class="control-group">
				<input name="link" type="text" class="link span3" placeholder="Link:"/>
			  </div>

			  <div class="control-group" id="newpost-form-body">
				<p class="text-error hidden"></p>
				<textarea name="body" rows="6" class="body span5" placeholder="Write something:"></textarea>
			  </div>

