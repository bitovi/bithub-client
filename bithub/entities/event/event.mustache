{{#if inited}}
	{{#event}}
		<div class="event list-element {{#isEventUpvoted this}}upvoted{{/isEventUpvoted}} clearfix" {{ data 'eventObj'}}>

			{{{ renderToolbar }}}
			{{{ renderUpvote this true }}}

			<div class="span7 content clearfix">

				<div class="row {{#if image_url}}has-image{{/if}}">
					{{{img image_url "Thumb" "thumb"}}}
	
					<div class="title-body-wrap">
						<h5 class="title clearfix">
							<a href="{{eventUrl this}}">
								<span class="event-date-wrap">
									{{ prettifyTs props.scheduled_at 'datetime'}}
								</span>
								<strong>{{{v title }}}</strong>
							</a>
						</h5>
						<div class="event-location">
							{{v props.location }}
						</div>
						<div class="body no-more">{{{v body }}}</div>
					</div>

					
				</div>

				{{{ renderStatusBar this 'RSVPs' }}}

				{{#if childrenExistAndExpanded}}
					<div class="replies row">
						<span class="replies-caret"></span>
						{{#sortedChildren}}
							<div class="reply-event row rsvp-row">
								<div class="rsvp-response rsvp-response-{{ props.response }}">{{ props.response }}</div> {{ actor }}
								<div class="rsvp-thumb-wrap">
									{{{ img props.origin_author_avatar_url }}}
								</div>
							</div>
						{{/sortedChildren}}
						
					</div>
				{{/if}}
				
			</div>

		</div>
	{{/event}}
{{/if}}