<div class="span1 votes">

	<div class="uparrow"></div>
	<div class="count">
		{{ event.upvotes }}
	</div>

	<div class="voteup-btn">
		<span class="upvote-caret"></span>
		<span class="caption">
			{{#eventIsUpvoted event}}
				Voted
			{{else}}
				Vote up
			{{/eventIsUpvoted}}
		</span>
	</div>

	{{#if canBeAwarded}}
		<div class="award-btn">
			<div class="word"><span>Award</span></div>
			<div class="caret-right"></div>
			<div class="clearfix"></div>
		</div>
	{{/if}}

	<div class="clearfix"></div>

</div>