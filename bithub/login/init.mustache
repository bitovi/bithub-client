<li class="divider-vertical"></li>

{{#if user.loggedIn}}

<li>
  <div class="gradient-border-wrapper">
	<button id="show-newpost-form-btn"><span>+</span> Post</button>
  </div>
</li>

<li id="profile-dropdown" class="dropdown">
  <button class="dropdown-toggle" data-toggle="dropdown">
	<div class="gradient-border-wrapper">
	  <img class="avatar" src="{{user.avatar_url}}" alt="gravtar">
	</div>
	<b class="caret"></b>
  </button>
  <ul class="dropdown-menu">
	<li><a href="#profile"><span class="login-profile"></span>My Profile</a></li>
	<li><a href="#activities"><span class="login-points"></span>My Points &amp; Activity</a></li>
	<li><a href="/api/auth/logout"><span class="login-logout"></span>Logout</a></li>
  </ul>
</li>

{{else}}

<li id="login-dropdown" class="dropdown">
  <a href="#" class="dropdown-toggle login-btn" data-toggle="dropdown">Login or Register<b class="caret"></b></a>
  <ul class="dropdown-menu">
	<li><a id="login-twitter-link" href="/api/auth/twitter"><span class="login-twitter"></span>Twitter</a></li>
	<li><a id="login-github-link" href="/api/auth/github"><span class="login-github"></span>GitHub</a></li>
  </ul>
</li>

{{/if}}
