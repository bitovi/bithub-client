<!-- ACTIVITIES --><div id="activities" class="span12">	{{#if isLoggedIn}}		<h1>Activity history</h1>				{{#if activities.length}}			<ul id="activity-list">				{{#each activities}}					{{#display}}						<li>							<span class="points">{{calcPoints}}</span>							<span class="type">{{type}}</span>							<a href="{{eventUrl}}">{{#if title}}{{title}}{{else}}{{comment}}{{/if}}</a>							<small>({{prettifyTs created_at "datetime"}})</small>						</li>					{{/display}}				{{/each}}						</ul>		{{/if}}		{{#if isLoading}}			<div class="spinner-bottom">				<img src="/assets/images/ajax-loader-sm-blue.gif" alt="loading...">			</div>		{{/if}}	{{ else }}		<div class="alert notice">You must be logged in to see this page.</div>	{{/if}}</div>